<%= form_for @user do |f| %>

  <div class="new_form">
    <%= f.label :username %>
    <%= f.text_field :username%></br>

    <%= f.label :email %>
    <%= f.text_field :email%></br>

    <%= f.label :password %>
    <%= f.password_field :password%></br>

    <%= f.submit 'Submit' %>
  </div>
<% end %>

